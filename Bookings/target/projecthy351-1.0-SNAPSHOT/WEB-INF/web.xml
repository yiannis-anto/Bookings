    </servlet>
    <servlet>
        <servlet-name>getReservationsServlet</servlet-name>
        <servlet-class>Servlets.getReservationsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>confirmReservationServlet</servlet-name>
        <servlet-class>Servlets.confirmReservationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OpenDBServlet</servlet-name>
        <url-pattern>/OpenDBServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckUsernameServlet</servlet-name>
        <url-pattern>/CheckUsernameServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addPersonToDB</servlet-name>
        <url-pattern>/addPersonToDB</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginGuestServlet</servlet-name>
        <url-pattern>/loginGuestServlet</url-pattern>
