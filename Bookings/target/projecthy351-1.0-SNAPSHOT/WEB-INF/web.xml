        <servlet-class>Servlets.OpenDBServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckUsernameServlet</servlet-name>
        <servlet-class>Servlets.CheckUsernameServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addPersonToDB</servlet-name>
        <servlet-class>Servlets.addPersonToDBServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginGuestServlet</servlet-name>
        <servlet-class>Servlets.loginGuestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addRoomServlet</servlet-name>
        <servlet-class>Servlets.addRoomServlet</servlet-class>
